@model List<(AspNetMvcCore.Models.Post, int)>

@{
    ViewData["Title"] = "Query 1";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-12">

        <form method="GET" action="/Query/Query1" class="form-inline">
            <div class="form-group">
                <input class="form-control" type="text" name="id" placeholder="Enter UserId"/>
                <input class="btn" type="submit" value="Send" />
            </div>
        </form>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">CreatedAt</th>
                    <th scope="col">Title</th>
                    <th scope="col">Body</th>
                    <th scope="col">UserId</th>
                    <th scope="col">Likes</th>
                    <th scope="col">CommentsCount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td scope="col">@i.Item1.Id</td>
                        <td scope="col">@i.Item1.CreatedAt</td>
                        <td scope="col">@i.Item1.Title</td>
                        <td scope="col">@i.Item1.Body</td>
                        <td scope="col">@i.Item1.UserId</td>
                        <td scope="col">@i.Item1.Likes</td>
                        <td scope="col">@i.Item2</td>
                    </tr>
                }
               
            </tbody>
        </table>
    </div>
</div>