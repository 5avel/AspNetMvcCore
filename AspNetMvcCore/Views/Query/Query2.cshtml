@model List<AspNetMvcCore.Models.Comment>

@{
    ViewData["Title"] = "Query 2";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-12">

        <form method="GET" action="/Query/Query2">
            <div class="input-group mb-3"></div>
                <input class="form-control" type="text" name="id"/>
                <input class="btn" type="submit" value="Send" />
            </div>
        </form>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">CreatedAt</th>
                    <th scope="col">Body</th>
                    <th scope="col">UserId</th>
                    <th scope="col">PostId</th>
                    <th scope="col">Likes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td scope="col">@i.Id</td>
                        <td scope="col">@i.CreatedAt</td>
                        <td scope="col">@i.Body</td>
                        <td scope="col">@i.UserId</td>
                        <td scope="col">@i.PostId</td>
                        <td scope="col">@i.Likes</td>
                    </tr>
                }
               
            </tbody>
        </table>
    </div>
</div>